<!-- user.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>USERS</title>
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <h1>USERS AND THEIR DATA</h1>
    <form action="/" method="get">
        <button>HOME</button>
    </form>
    <table>
        <tr>
            <th>ID</th>
            <th>USERNAME</th>
        </tr>
        <%for(let i=0;i<count;i++){%>
            <tr>
                <td>
                    <%=results[i]["id"]%>
                </td>
                <td>
                    <%=results[i]["username"]%>
                </td>
                <td>
                    <form action="/users/<%=results[i]["id"]%>/edit" method="get">
                        <button id="edit">EDIT</button>
                    </form>
                </td>
                <td>
                    <form action="/users/<%=results[i]["id"]%>/delete" method="get">
                        <button id="del">DELETE</button>
                    </form>
                </td>
            </tr>
            <%}%>
    </table>
</body>

</html>